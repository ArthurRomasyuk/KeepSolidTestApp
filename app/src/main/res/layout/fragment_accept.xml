<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arutr.keepsolidapp.fragment.AcceptFragment">

    <Button
        android:id="@+id/accept_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_below="@+id/accept_text"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/accept_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/checkbox_marked_outline"
        android:layout_marginTop="@dimen/marginTop" />

    <TextView
        android:id="@+id/accept_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accep_text"
        android:layout_marginTop="@dimen/marginTopText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_toEndOf="@id/accept_icon"/>


</RelativeLayout>
